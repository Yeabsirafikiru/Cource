CREATE DATABASE vital_events_db;
USE vital_events_db;
CREATE TABLE vital_events(
full_name VARCHAR(100)NOT NULL,
date_of_birth DATE NOT NULL,
gender VARCHAR(20) NOT NULL,
nationality VARCHAR(50) NOT NULL,
address TEXT NOT NULL,
phone VARCHAR(20)NOT NULL,
email VARCHAR(100)NOT NULL,
event_type VARCHAR(20)NOT NULL,
event_date DATE NOT NULL,
event_location VARCHAR(100) NOT NULL,
descriptiion TEXT,
registration_date TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);
ALTER TABLE vital_events 
ADD COLUMN address_line1 VARCHAR(255) NOT NULL,
ADD COLUMN address_line2 VARCHAR(255),
ADD COLUMN city VARCHAR(100) NOT NULL,
ADD COLUMN postal_code VARCHAR(20) NOT NULL,
ADD COLUMN event_description TEXT;
